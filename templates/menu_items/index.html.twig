{# templates/menu_items/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{{ category | capitalize }} - Le Bônoit{% endblock %}

{% block content %}
    <section class="category-menu">
        <h2>{{ category | capitalize }}</h2>
        <div class="menu-items">
            {% for item in items %}
                <div class="menu-item">
                    <h3>{{ item.name }}</h3>
                    <p>{{ item.description }}</p>
                    <p>Prix: {{ item.price }}€</p>
                </div>
            {% else %}
                <p>Aucun élément trouvé pour cette catégorie.</p>
            {% endfor %}
        </div>
    </section>
{% endblock %}

