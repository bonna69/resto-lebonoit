<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="{{ asset('favicon.ico') }}" type="image/x-icon">
    <title>{% block title %}My Symfony App{% endblock %}</title>
    {% block stylesheets %}
        {# Ici vous pouvez ajouter des styles spécifiques à la page #}
    {% endblock %}
</head>
<body>
<header>
    <div class="menuToggle" onclick="toggleMenu()"></div>
    <ul class="navbar">
        <!-- Menu items here -->
    </ul>
    <div class="region-header">
        <a href="#" class="map_button"></a>
    </div> 
</header>

<main>
    {% block content %}{% endblock %}
</main>

<!-- Commentaire: Lien de réservation -->
<!-- <a href="{{ path('reservation') }}" class="custom-button book_button"><span>R</span>eservation</a> -->

<script>
    function toggleMenu() {
        const navbar = document.querySelector('.navbar');
        navbar.classList.toggle('open');
    }

    // Gestion de la redirection vers la page de réservation
    document.addEventListener("DOMContentLoaded", () => {
        const reservationBtn = document.querySelector(".book_button");
        if (reservationBtn) {
            reservationBtn.addEventListener("click", (event) => {
                event.preventDefault();
                window.location.href = "{{ path('reservation') }}";
            });
        }
    });
</script>
</body>
</html>
