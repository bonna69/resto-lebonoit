{# templates/security/myaccount.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}My Account{% endblock %}

{% block body %}
<h1>My Account</h1>

{% if app.session.flashBag.has('success') %}
    <div class="alert alert-success">
        {{ app.session.flashBag.get('success')|first }}
    </div>
{% endif %}

{{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit">{{ form.vars.value.save }}</button>
{{ form_end(form) }}
{% endblock %}
