{# templates/admin/password_reset.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <main>
        <section class="container wrapper">
            <h2 class="display-4 pt-3">Reset Password</h2>
            <p class="text-center">Please fill this form to reset your password.</p>

            {{ form_start(form) }}
                {{ form_row(form.new_password) }}
                {{ form_row(form.confirm_password) }}
                {{ form_row(form.save) }}
            {{ form_end(form) }}

        </section>
    </main>
{% endblock %}
