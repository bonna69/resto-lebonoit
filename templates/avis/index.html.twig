{% extends 'base.html.twig' %}

{% block title %}Le Bônoit - Votre Avis{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/avis.css') }}">
{% endblock %}

{% block content %}
    <section class="hero-section">
        <h1>Votre avis</h1>
    </section>
    
    <section class="avis-form-section">
        <div class="form-container">
            <div class="form-content">
                <h2>VOUS DÉSIREZ NOUS DONNER VOTRE AVIS ?</h2>
                <p>REMPLISSEZ LE FORMULAIRE CI-DESSOUS !</p>
                {{ form_start(form) }}
                    <div class="form-row">
                        <div class="form-group">
                            {{ form_label(form.nom) }}
                            {{ form_widget(form.nom) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group full-width">
                            {{ form_label(form.commentaire) }}
                            {{ form_widget(form.commentaire) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group full-width">
                            {{ form_widget(form.submit, { 'attr': { 'class': 'submit-button' } }) }}
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
    <a href="{{ path('app_home_page') }}" class="retour-button">Retour à l'accueil</a>
{% endblock %}
