{# templates/avis/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Le Bônoit - Votre Avis{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/avis.css') }}">
{% endblock %}

{% block content %}
    <section class="hero-section">
        <h1>Votre avis</h1>
    </section>
    
    <section class="avis-form-section">
        <div class="form-container">
            <h2>VOUS DÉSIREZ NOUS DONNER VOTRE AVIS ? REMPLISSEZ LE FORMULAIRE CI-DESSOUS !</h2>
            {{ form_start(form) }}
                <div class="form-row">
                    <div class="form-group">
                        {{ form_label(form.nom) }}
                        {{ form_widget(form.nom) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email) }}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group full-width">
                        {{ form_label(form.commentaire) }}
                        {{ form_widget(form.commentaire) }}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group full-width">
                        {{ form_widget(form.submit, { 'attr': { 'class': 'submit-button' } }) }}
                    </div>
                </div>
            {{ form_end(form) }}
            <a href="{{ path('app_home_page') }}" class="button retour-button">Retour à l'accueil</a>
        </div>
        <div class="map-container">
            <iframe src="https://www.google.com/maps/embed?pb=..." width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('scripts/main.js') }}"></script>
    <script>
        // Add any specific JS for this page if necessary
    </script>
{% endblock %}
